# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_nextauth_secret_here

# Google OAuth & Meet Integration
GOOGLE_CLIENT_ID=your_google_client_id_here
GOOGLE_CLIENT_SECRET=your_google_client_secret_here
GOOGLE_REDIRECT_URI=http://localhost:3000/api/auth/google/callback

# Google Refresh Token (optional - will be generated automatically via OAuth flow)
GOOGLE_REFRESH_TOKEN=your_refresh_token_here

# Facebook OAuth (optional)
FACEBOOK_CLIENT_ID=your_facebook_client_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret_here

# GitHub OAuth (optional)
GITHUB_ID=your_github_client_id_here
GITHUB_SECRET=your_github_client_secret_here

# For development, you can use these demo values:
# NEXTAUTH_SECRET=demo_secret_for_development_only
# GOOGLE_CLIENT_ID=demo_client_id
# GOOGLE_CLIENT_SECRET=demo_client_secret
